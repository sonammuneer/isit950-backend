generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  binaryTargets   = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          String  @id @default(uuid())
  email       String  @unique
  password    String
  name        String
  phonenumber String
  dateofbirth String
  role        String?
}

model Hotel {
  id         String @id @default(uuid())
  name       String @unique
  place      String
  adminemail String
  room       Room[]
}

model Room {
  id       String     @id @default(uuid())
  name     String     @unique
  hotelid  String
  hotel    Hotel      @relation(fields: [hotelid], references: [id])
  Bookings Bookings[]
}

model Bookings {
  id            String   @id @default(uuid())
  roomid        String
  room          Room     @relation(fields: [roomid], references: [id])
  startdate     DateTime
  enddate       DateTime
  bookinguserid String
  hotelid       String
}
